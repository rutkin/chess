    "version": "0.2.0",
    "configurations": [
        {
            "name": "Matchmaking: Run",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/matchmaking/cmd/matchmaking",
            "env": {
                "MM_HTTP_ADDR": ":8080",
                "MM_REDIS_ADDR": "localhost:6379",
                "MM_COORDINATOR_URL": "http://localhost:8090"
            },
            "args": [],
            "cwd": "${workspaceFolder}/matchmaking"
        },
        {
            "name": "Matchmaking: Run (Race)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/matchmaking/cmd/matchmaking",
            "env": {
                "MM_HTTP_ADDR": ":8080",
                "MM_REDIS_ADDR": "localhost:6379"
            },
            "buildFlags": "-race",
            "cwd": "${workspaceFolder}/matchmaking"
        },
        {
            "name": "Matchmaking: Attach Local",
            "type": "go",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Matchmaking: Test Package",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/matchmaking/internal/...",
            "args": [],
            "cwd": "${workspaceFolder}/matchmaking"
        }
    ]
}